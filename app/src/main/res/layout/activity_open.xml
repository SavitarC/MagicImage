<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OpenActivity"
    android:orientation="vertical"
    android:background="@drawable/openbackground1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:background="@drawable/opencolor1"
            android:layout_centerHorizontal="true"
            ></View>
        <View
            android:id="@+id/second_line"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:background="@drawable/opencolor2"

            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/first_line"
            android:layout_marginLeft="12dp"
            ></View>
        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:background="@drawable/opencolor3"

            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/second_line"
            android:layout_marginLeft="12dp"

            ></View>
        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="290dp"
            android:background="@drawable/opencolor4"

            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/third_line"
            android:layout_marginLeft="12dp"

            ></View>
        <View
            android:id="@+id/fifth_line"
            android:layout_width="20dp"
            android:layout_height="210dp"
            android:background="@drawable/opencolor5"

            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/fourth_line"
            android:layout_marginLeft="12dp"

            ></View>
        <View
            android:id="@+id/sixth_line"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:background="@drawable/opencolor6"

            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/fifth_line"
            android:layout_marginLeft="12dp"

            ></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_user_head_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="30dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:background="#00000000"
                android:src="@drawable/imageloader"></ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="@color/colorFFE1E1E1"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="150dp"
            android:textSize="30sp"
            ></TextView>

    </RelativeLayout>
</LinearLayout>